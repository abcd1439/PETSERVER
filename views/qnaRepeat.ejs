<html>
	<head>
	    <meta charset="UTF-8">
	    <link rel="shortcut icon" href="../images/ico_image.ico">
	    <title>Pettner</title>
	    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		
	</head>
	<body>
		<nav class="navbar navbar-inverse">
			<div class="container-fluid">
	    		<div class="navbar-header">
	    			<a class="navbar-brand" href="/webQna/<%= hospitalId %>"><i class="glyphicon glyphicon-arrow-left"></i></a>
	    		</div>
	    		<ul class="nav navbar-nav navbar-right">
	      			<li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
	    		</ul>
	  		</div>
		</nav>

		<h1><%=question%></h1>
		<div>	
		   <ul>
		    	<% for(var i = 0 ; i < qnaSubs.length ; i++ ) { %>
		    		<%if(qnaSubs[i].userId){%>
						사용자
		        	<%}%>
		        	<li><%= qnaSubs[i].content %></li><br>
		    	<% } %>
		   </ul>
		</div>

		<form action="/webQnaRepeat/<%=id%>" method='post'>
		    <div class="input-group">
		    	<input type="hidden" name="vetId" id="vetId" value="<%=hospitalId%>" >
		    	<input type="text" class="form-control" placeholder="답변 작성" name="content">
		    	<div class="input-group-btn">
		    		<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-pencil"></i></button>
		    	</div>
		    </div>
		</form>
	</body>
</html>
